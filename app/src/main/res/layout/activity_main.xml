<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_width_62dp"
            android:layout_height="@dimen/layout_height_62dp"
            android:background="@color/background_color_1"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/now_playing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color_2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/now_playing"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_width_62dp"
            android:layout_height="@dimen/layout_height_62dp"
            android:background="@color/background_color_2"
            android:src="@drawable/ic_songs" />

        <TextView
            android:id="@+id/songs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color_1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/name_songs_activity"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_width_62dp"
            android:layout_height="@dimen/layout_height_62dp"
            android:background="@color/background_color_1"
            android:src="@drawable/my_playlist" />

        <TextView
            android:id="@+id/my_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color_2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/my_playlist"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</LinearLayout>